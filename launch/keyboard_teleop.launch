<?xml version="1.0"?>
<launch>
  <!-- start Webots -->
  <arg name="no-gui" default="false," doc="Start Webots with minimal GUI"/>
  <include file="$(find grad_project)/launch/webots.launch">
    <arg name="mode" value="realtime"/>
    <arg name="no-gui" value="$(arg no-gui)"/>
    <arg name="world" value="$(env PWD)/src/grad_project/worlds/labirint.wbt"/>
  </include>

  <arg name="auto-close" default="false" doc="Startup mode"/>
  <node name="keyboard_teleop" pkg="grad_project" type="keyboard_teleop" required="$(arg auto-close)" launch-prefix="xterm -e gdb --args" />
</launch>
